
@model OrderViewModel;
<h3>Resumo do Order</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº do Order: @(Model.Id)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>@Model.Registration.Nome</div>
                <div>@Model.Registration.Telefone</div>
            </div>
            <div class="col-md-3">
                @Model.Registration.Email
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>@Model.Registration.Endereco @Model.Registration.Complemento - @Model.Registration.Bairro - CEP: @Model.Registration.CEP - @Model.Registration.Municipio - @Model.Registration.UF - Brasil</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>
        </div>

        @foreach (var item in Model.Items)
        {


            <div class="row">
                <div class="col-md-10">
                    <div>@item.Product.Nome</div>
                </div>
                <div class="col-md-2">
                    <div class="pull-right">@item.Quantidade</div>
                </div>
            </div>
        }

    </div>
</div>
